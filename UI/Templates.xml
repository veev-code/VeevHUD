<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">

    <!--
        VeevHUD - UI Templates
        Reusable frame templates for the HUD
    -->

    <!-- Basic icon template with cooldown -->
    <Frame name="VeevHUD_IconTemplate" virtual="true">
        <Size x="36" y="36"/>
        <Layers>
            <Layer level="ARTWORK">
                <Texture parentKey="Icon" setAllPoints="true">
                    <TexCoords left="0.08" right="0.92" top="0.08" bottom="0.92"/>
                </Texture>
            </Layer>
            <Layer level="OVERLAY">
                <Texture parentKey="Border" setAllPoints="true">
                    <Color r="0" g="0" b="0" a="1"/>
                </Texture>
            </Layer>
        </Layers>
        <Frames>
            <Cooldown parentKey="Cooldown" inherits="CooldownFrameTemplate">
                <Anchors>
                    <Anchor point="TOPLEFT"/>
                    <Anchor point="BOTTOMRIGHT"/>
                </Anchors>
            </Cooldown>
        </Frames>
    </Frame>

    <!-- Status bar template -->
    <StatusBar name="VeevHUD_StatusBarTemplate" virtual="true">
        <Size x="200" y="14"/>
        <Layers>
            <Layer level="BACKGROUND">
                <Texture parentKey="Background" setAllPoints="true">
                    <Color r="0.1" g="0.1" b="0.1" a="0.8"/>
                </Texture>
            </Layer>
        </Layers>
        <BarTexture file="Interface\TargetingFrame\UI-StatusBar"/>
    </StatusBar>

</Ui>
