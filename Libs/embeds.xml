<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">

    <!--
        VeevHUD - Embedded Libraries

        LibSpellDB is embedded for self-contained distribution.
        If LibSpellDB is installed as a standalone addon, it will take precedence
        via LibStub's version checking.
    -->

    <!-- LibStub - Required for library access -->
    <Script file="LibStub\LibStub.lua"/>

    <!-- CallbackHandler for event handling -->
    <Script file="CallbackHandler-1.0\CallbackHandler-1.0.lua"/>

    <!-- LibCustomGlow for animated glow effects -->
    <Include file="LibCustomGlow-1.0\LibCustomGlow-1.0.xml"/>

    <!-- LibSpellDB - Spell database (embedded) -->
    <Include file="LibSpellDB\lib.xml"/>

</Ui>
